@using NewsPaper.Models.Entities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    SelectList departmentList = new SelectList(ViewBag.departments, "Id", "Name");

}
@model Author

<section class="contact section-padding">
    <div class="container">
        <div>

            <div>
                <h2 class="mb-4">Update <span>Author</span></h2>

                <form method="post" asp-controller="Author" asp-action="SaveAuthor" asp-route-id="@Model.Id" class="contact-form me-lg-5 pe-lg-3" style="display: flex; justify-content: space-around;" role="form">
                    <div style="flex-grow: 0.5;">
                        <div class="form-floating">
                            <input asp-for="Name" class="form-control">
                            <label asp-for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating my-4">
                            <input asp-for="BirthDate" class="form-control" pattern="\d{4}-\d{2}-\d{2}">
                            <label asp-for="BirthDate"></label>
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="TitleJob" class="form-control">
                            <label asp-for="TitleJob"></label>
                            <span asp-validation-for="TitleJob" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Address" class="form-control">
                            <label asp-for="Address"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        
                    </div>
                    
                    <div>
                        <div class="form-floating my-4">
                            <input asp-for="Gender" class="form-control">
                            <label asp-for="Gender"></label>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="form-floating my-4">
                            <input asp-for="Salary" class="form-control">
                            <label asp-for="Salary"></label>
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <select asp-for="departmentId" asp-items="departmentList" class="form-control"></select>
                            <label asp-for="departmentId" style="width: 45%"></label>
                            <span asp-validation-for="departmentId" class="text-danger"></span>
                        </div>

                        <div class="col-lg-5 col-6">
                            <button type="submit" class="form-control" style="margin-top: 20px">Save</button>
                        </div>
                    </div>
                    
                </form>
            </div>

            

        </div>
    </div>
</section>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}