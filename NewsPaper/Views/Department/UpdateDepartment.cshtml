                                <input asp-for="@auth.Name" class="form-control" placeholder="Name" required>

                                <label asp-for="@auth.Name"></label>
                            </div>
                        }
                    } *@
                    <div class="col-lg-5 col-6">
                        <button type="submit" class="form-control">Save</button>
                    </div>
                </form>
            </div>

            
         

        </div>
    </div>
</section>

